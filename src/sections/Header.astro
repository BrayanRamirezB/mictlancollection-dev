---
import SocialPill from '../components/SocialPill.astro'
import GitHubIcon from '../assets/icons/github-dark.svg'
import HomeIcon from '../assets/icons/home.svg'
---

<header
  class='header fixed top-0 z-999 w-full mx-auto shadow-lg backdrop-blur-sm saturate-150 bg-neutral-100/5'
>
  <nav
    class='max-w-screen-3xl flex flex-wrap flex-col md:flex-row items-center justify-center md:justify-around mx-auto py-2 px-4 gap-y-2'
  >
    <div class='flex items-center px-6'>
      <a
        href='/'
        class='flex items-center transition-transform duration-500 ease-in-out hover:scale-110'
      >
        <span
          class='self-center text-2xl font-bold whitespace-nowrap text-neutral-100'
          >Mictlan Collection</span
        >
      </a>
    </div>

    <div
      class='flex flex-wrap md:flex-row items-center justify-center px-2 sm:px-6 text-base font-medium gap-x-6 gap-y-2'
    >
      <a
        href='/'
        class='flex items-center justify-center gap-x-1 transition duration-300 hover:-translate-y-1 text-neutral-100 hover:text-primary-500'
      >
        <HomeIcon class='size-5' />
        Inicio
      </a>
      <SocialPill
        href='https://github.com/BrayanRamirezB/mictlancollection-dev'
        class='transition-colors duration-300 text-neutral-100 hover:text-primary-500'
      >
        <GitHubIcon
          class='size-5 hover:-translate-y-1 transition-transform duration-300 ease-in-out'
        />
      </SocialPill>
    </div>
  </nav>
</header>
